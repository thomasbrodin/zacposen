{% block footer %}
	<footer>

		<div class="container">
			<div class="row uppercase text-center">
				<div class="col-4">
					<h4>The house of Z</h4>
					<ul>
						{% if houseZ %}
							{% for childpages in houseZ %}
							<li class="page_item">
								<a class="smoothy" href="{{site.link}}/house-of-z/#{{childpages.post_name}}">
								{{childpages.post_title}}
								</a>
							</li>
							{% endfor %}
						{% endif %}
					</ul>
				</div>
				<div class="col-4">
					<h4>The World of Zac Posen</h4>
					<ul>
						{% if worldZ %}
							{% for childpages in worldZ[:2] %}
								<li class="page_item">
									<a class="smoothy" href="{{site.link}}/the-world-of-z/#{{childpages.post_name}}">
										{{childpages.post_title}}
									</a>
								</li>
							{% endfor %}
						{% endif %}
					</ul>
					<div class='socials'>
						{% if option.facebook %}
								<a href="{{option.facebook}}" target="_blank">
									<span class='st_facebook_large' displayText='Facebook'></span>
								</a>
							{% endif %}
							{% if option.twitter %}
								<a href="{{option.twitter}}" target="_blank">
									<span class='st_twitter_large' displayText='Tweet'></span>
									</a>
							{% endif %}
							{% if option.instagram %}
								<a href="{{option.instagram}}" target="_blank">
									<span class='st_instagram_large' displayText='instagram'></span>
								</a>
							{% endif %}
							{% if option.pinterest %}
								<a href="{{option.pinterest}}" target="_blank">
									<span class='st_pinterest_large' displayText='Pinterest'></span>
								</a>
							{% endif %}
							{% if option.tumblr %}
								<a href="{{option.tumblr}}" target="_blank">
									<span class='st_tumblr_large' displayText='Tumblr'></span>
									</a>
							{% endif %}
							{% if option.you_tube %}
								<a href="{{option.you_tube}}" target="_blank">
									<span class='st_youtube_large' displayText='YouTube'></span>
								</a>
							{% endif %}
					</div>
				</div>
				<div class="col-4">
					<!-- Begin MailChimp Signup Form -->
					<h4>More of Zac Posen</h4>

						<div id="mc_embed_signup">
						<p class="uppercase"> Subscribe to the newsletter</p>
						<form action="//zacposen.us11.list-manage.com/subscribe/post?u=6186026d2e9d3729b69e01e93&amp;id=0dd22aacfd" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
								<div id="mc_embed_signup_scroll">
									<div class="mc-field-group">
										<input type="text" placeholder="NAME" value="" name="FNAME" class="required" id="mce-FNAME">
									</div>
									<div class="mc-field-group">
										<input type="email" placeholder="ENTER EMAIL ADDRESS" value="" name="EMAIL" class="required email" id="mce-EMAIL">
										<input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button">
									</div>

									<div id="mce-responses" class="clear">
										<div class="response" id="mce-error-response" style="display:none"></div>
										<div class="response" id="mce-success-response" style="display:none"></div>
									</div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
								<div style="position: absolute; left: -5000px;"><input type="text" name="b_6186026d2e9d3729b69e01e93_0dd22aacfd" tabindex="-1" value=""></div>
								</div>
						</form>
						</div>
						<!--End mc_embed_signup-->
				</div>
				<div class="col-4">
					<nav class="nav-secondary" role="navigation">
						<ul class="nav">
						{% for item in footer_menu.get_items %}
							<li class="nav-item{{item.classes | join(' ')}}">
								<a class="nav-item-link" title="{{item.title}}" href="{{item.get_link}}">{{item.title}}</a>
							</li>
						{% endfor %}
						</ul>
					</nav><!-- #nav -->
				</div>
			</div>
		</div>

	</footer>
{% endblock %}
