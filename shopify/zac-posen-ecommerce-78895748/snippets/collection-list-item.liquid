<div class="collection-list-item below">

  {% if collection-list-item == 'linklist' %}
    {% assign link_handle = link.handle %}
    {% assign collection = collections[link_handle] %}
  {% endif %}

  {% if collection.image %}
    {% assign collectionImage = collection.image.src | collection_img_url: 'large' %}
  {% else %}
    {% assign collectionImage = collection.products.first.featured_image | product_img_url: 'large' %}
  {% endif %}

  <a href="{{ collection.url }}">

    <img alt="" src="{{ collectionImage }}">

    <h2>{{ collection.title }}</h2>

  </a>

  {% if settings.display-collection-descriptions and collection.description.size > 0 %}
    <div class="rte">{{ collection.description }}</div>
  {% endif %}

</div>
