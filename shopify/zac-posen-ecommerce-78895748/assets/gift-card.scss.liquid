  @import url('http://fonts.googleapis.com/css?family=Vollkorn:400italic,700italic,400,700');
{% endif %}

{% if userFonts contains "Lora, serif" %}
  @import url('//fonts.googleapis.com/css?family=Lora:400italic,700italic,400,700');
